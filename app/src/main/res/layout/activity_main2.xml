<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drw"
    android:background="@drawable/pan"
    android:screenOrientation="portrait" >
    tools:context=".MainActivity2">

    <LinearLayout
        android:layout_width= "match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:background="@drawable/tb">

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/speak"
                android:layout_width="297dp"
                android:layout_height="39dp"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/np"
                android:drawableLeft="@android:drawable/sym_action_email"
                android:text="Inbox" />


        </LinearLayout>

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="315dp"
            android:scrollbars="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView
                    android:id="@+id/c5"
                    android:layout_width="340dp"
                    android:layout_height="277dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/crd"
                    android:backgroundTint="#E1D1EB"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/line1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="#000"
                        android:text="....."
                        android:textSize="18sp"/>

                    <ImageView
                        android:id="@+id/meme"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:padding="5dp" />

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/c4"
                    android:layout_width="340dp"
                    android:layout_height="277dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/crd"
                    android:backgroundTint="#E1D1EB"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/meme2"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/line2"
                        android:layout_width="wrap_content"
                        android:textSize="18sp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="#000"
                        android:text="....." />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/c3"
                    android:layout_width="340dp"
                    android:layout_height="277dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/crd"
                    android:backgroundTint="#E1D1EB"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/meme3"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/line3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:text="....." />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/c2"
                    android:layout_width="340dp"
                    android:layout_height="277dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/crd"
                    android:backgroundTint="#E1D1EB"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/meme4"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/line4"
                        android:textSize="18sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:textColor="#000"
                        android:text="....." />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/c1"
                    android:layout_width="340dp"
                    android:layout_height="277dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/crd"
                    android:backgroundTint="#E1D1EB"
                    android:padding="8dp">

                    <ImageView
                        android:id="@+id/meme5"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        android:padding="5dp" />

                    <TextView
                        android:id="@+id/line5"
                        android:textSize="18sp"
                        android:textColor="#000"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="....." />

                </android.support.v7.widget.CardView>

            </LinearLayout>
        </HorizontalScrollView>

        <android.support.v7.widget.CardView
            android:id="@+id/qt"
            android:layout_width="333dp"
            android:layout_height="151dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/crd"
            android:backgroundTint="#E1D1EB"
            android:padding="8dp">

            <TextView
                android:id="@+id/quotes"
                android:layout_width="333dp"
                android:layout_height="match_parent"
                android:fontFamily="cursive"
                android:gravity="center"
                android:padding="5dp"
                android:text="Quotes"
                android:textAlignment="center"
                android:textColor="#CC5B5B"
                android:textSize="18sp" />
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/had"
        android:background="#4A015E"
        app:menu="@menu/drawer_menu">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>